<h2>Welcome to the Articles Index!</h2>


<% @articles.each do |article| %>
<h4>Title:</h4> <%= article.title %><br>
<h4>Body:</h4> 
<% unless article.snapshots.empty? %>
<%= article.snapshots.last.body.html_safe%><br>
<%= link_to 'Show', article_path(article) %>
<%= link_to 'Edit', edit_article_path(article) %>
<%= link_to 'Destroy', article_path(article), method: "delete" %>
<% end %>
<% end %>
<p>
	Create a <a href='articles/new'>new</a> article!
</p>

