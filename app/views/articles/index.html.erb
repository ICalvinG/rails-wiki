<h1>Welcome to the Articles Index!</h1>

<h2>Search for an article:</h2>
<%= form_tag search_path, method: :get do %>
<%= text_field_tag :search, params[:q] %>
<%=submit_tag "search", name: nil%>
<%end%>





<% @articles.each do |article| %>
<h4>Title:</h4> <%= article.title %><br>
<h4>Body:</h4> 
<%= article.snapshots.last.body.html_safe%><br>
<%= link_to 'Show', article_path(article) %>
<%= link_to 'Edit', edit_article_path(article) %>
<%= link_to 'Destroy', article_path(article), method: "delete" %>
<% end %>
<p>
	Create a <a href='articles/new'>new</a> article!
</p>

