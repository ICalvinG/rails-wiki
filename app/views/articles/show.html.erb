<div class ="container">

  <h3 class="title-for-line">Wiki: <%= @wiki.name %> </h3>
  <h4 id="article-title">Article: <%= @article.title %></h4>
          <% @article.categories.each do |category| %>
            <div id="category">filed under: <%= category.name %></div>
            <% end %>

    <div><%= @snapshot.body.html_safe %></div>

    <% if current_user && @wiki.administered_by?(current_user) %>

      <div class="article-show-bottom-links"><%= link_to 'see your revisions history!', snapshot_path(@snapshot) %> • <%= link_to 'edit your article', edit_article_path(@article) %> • <%= link_to 'delete your article', article_path(@article), method: "delete" %></div><br>


    <% end %>

</div>