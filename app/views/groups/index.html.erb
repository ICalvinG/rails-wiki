<h1>Available Groups:</h1>
 
<table>
  <tr>
    <th>Name</th>
  </tr>
 
  <% @groups.each do |group| %>
    <tr>
      <td><%= group.name %></td>
      <td><%= link_to 'Show', group_path(group) %></td>
      <td><%= link_to 'Edit', edit_group_path(group) %></td>
     
    </tr>
  <% end %>
</table>

<%= link_to 'New Group', new_group_path %>