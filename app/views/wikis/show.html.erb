 <h2>Search for an article:</h2>

<%= form_tag wikis_path, :method => 'get' do %>
  <p>
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "Search", :name => nil %>
  </p>
<% end %>

  <div><h2><%= link_to @wiki.name, wiki_path(@wiki) %></h2></div>

  <% if current_user && @wiki.administered_by?(current_user) %>

    <div><%= link_to 'delete', wiki_path(@wiki), method: :delete, data: { confirm: 'Are you sure?' } %></div>
    <div><%= link_to "edit", edit_wiki_path(@wiki) %></div>
    
  <% end %>


  <div><%= link_to "create a new article for this wiki", new_article_path %></div>

  <div><%= link_to 'back', wikis_path %></div>


<% @wiki.articles.each do |article| %>
 
 <%= link_to article.title, article_path(article) %>
<%end%>

<%= link_to 'back', wikis_path %>

